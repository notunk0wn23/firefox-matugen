{
  "manifest_version": 2,
  "name": "Matugen Firefox",
  "version": "1.0",
  "description": "Update Firefox theme from a matugen template",
  "applications": {
    "gecko": {
      "id": "your-email@example.com"
    }
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "file:///*"]
}
